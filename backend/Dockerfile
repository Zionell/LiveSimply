FROM node:20.13-alpine

ARG PORT
ENV PORT=$PORT
ARG SITE_URL
ENV SITE_URL=$SITE_URL
ARG POSTGRES_URL
ENV POSTGRES_URL=$POSTGRES_URL
ARG JWT_SECRET
ENV JWT_SECRET=$JWT_SECRET
ARG EMAIL_SERVER_USER
ENV EMAIL_SERVER_USER=$EMAIL_SERVER_USER
ARG EMAIL_SERVER_PASSWORD
ENV EMAIL_SERVER_PASSWORD=$EMAIL_SERVER_PASSWORD
ARG EMAIL_SERVER_HOST
ENV EMAIL_SERVER_HOST=$EMAIL_SERVER_HOST
ARG EMAIL_SERVER_PORT
ENV EMAIL_SERVER_PORT=$EMAIL_SERVER_PORT
ARG EMAIL_FROM
ENV EMAIL_FROM=$EMAIL_FROM
ARG CURRENCY_API
ENV CURRENCY_API=$CURRENCY_API
ARG CONVERT_CURRENCY
ENV CONVERT_CURRENCY=$CONVERT_CURRENCY
ARG TRANSLATE_API
ENV TRANSLATE_API=$TRANSLATE_API
ARG SESSION_SECRET
ENV SESSION_SECRET=$SESSION_SECRET
ARG MAGIC_LINK_SECRET
ENV MAGIC_LINK_SECRET=$MAGIC_LINK_SECRET

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npx prisma generate
RUN npm run build
RUN #npx prisma migrate deploy

CMD ["npm", "run", "start"]
